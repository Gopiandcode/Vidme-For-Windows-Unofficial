<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VidmeForWindows.Styles">

    <SolidColorBrush x:Key="ApplicationTheme_DarkAccent" Color="#121212"/>
    <SolidColorBrush x:Key="ApplicationTheme_DarkMidground" Color="#222222"/>
    <SolidColorBrush x:Key="ApplicationTheme_DarkForeground" Color="#323232"/>
    <SolidColorBrush x:Key="ApplicationTheme_RedAccent" Color="#622129"/>
    <SolidColorBrush x:Key="ApplicationTheme_RedMidground" Color="#7a2933"/>
    <SolidColorBrush x:Key="ApplicationTheme_RedMidgroundLight" Color="#93303c"/>
    <SolidColorBrush x:Key="ApplicationTheme_RedForeground" Color="#ab3745"/>
    <SolidColorBrush x:Key="ApplicationTheme_RedHighlights" Color="#c24050"/>
    <SolidColorBrush x:Key="ApplicationTheme_Highlight" Color="White" />


    <Style TargetType="Page">
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
</ResourceDictionary>
